{
  "manifest_version": 3,
  "name": "Chardow",
  "description": "AI-augmented Universal UI Deconstructor - Turn any website's UI into clean, developer-ready code.",
  "version": "0.1.0",
  "icons": {
    "128": "icons/icon.svg"
  },
  "action": {
    "default_title": "Chardow",
    "default_icon": "icons/icon.svg"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/index.tsx"
      ],
      "css": []
    }
  ],
  "commands": {
    "toggle-selection-mode": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Toggle Chardow selection mode"
    }
  }
}